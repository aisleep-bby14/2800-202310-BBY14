<%- include('templates/header_goback', { path: '/main' }) %>

    <div class="mb-4 text-center">

        <img class="d-block mx-auto my-4" src="images/logo.png" width="300">
        <h1 class="display-5 fw-bold headline">Reports</h1>

        <div class="col-lg-6 px-2 py-3 mx-auto transparentbox">
            <ul class="lead mb-4 list-group">
                <% for(i=0; i < reports.length; i++) { %>
                    <%- include('templates/report_list_item', {report: reports[i]}) %>
                        <% } %>
            </ul>
        </div>

        <div class="col-lg-6 px-2 py-3 mx-auto">
        <form class="d-flex" action="/report_list/delete/all" method="post"
            onsubmit="return confirm('Are you sure you want to delete all reports?');">
            <div class="form-check m-auto">
                <input class="form-check-input" type="checkbox" value="all" id="selectAll" name="selectAll"
                    onclick="selectAllReports()">
                <label class="form-check-label" for="selectAll">
                    Unselect all reports
                </label>
            </div>
            <button type="submit" id="submitButton" class="btn btn-danger mt-2 mx-auto" disabled>Delete</button>
        </form>
    </div>

    </div>

    <br>
    <br>
    <br>

    <%- include("templates/footer") %>