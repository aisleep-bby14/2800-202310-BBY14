<%- include("templates/header_goback") %>

<div class="container mb-5 pb-5">
  <h1 class="my-4">My Report for <%= date %> </h1>
<form action="/analysis" method="post">
  <div class="card mb-4 transparentbox">
    <div class="card-header">
      Sleep Information
    </div>
    <div class="card-body">
      <!-- <p class="card-text">Sleep Score: = sleepScore </p> -->
      <p class="card-text"><strong>Bed Time:</strong> <%= bedtime %></p>
      <p class="card-text"><strong>Wake up Time:</strong> <%= wakeup %></p>

      <p class="card-text"><strong>Take Time Asleep:</strong> <%= takeTimeAsleep %></p>
      <p class="card-text"><strong>Sleep Duration:</strong>  <%= sleepDuration %></p>
      <p class="card-text"><strong>Hours Asleep:</strong> <%= HoursAsleep %></p>

      <p class="card-text"><strong>Number of Wakeups:</strong> <%= wakeupCount %></p>
      <p class="card-text"><strong>Caffeine Consumption:</strong> <%= caffeine %>. &nbsp;<strong>Amount:</strong>  <%= caffeineCount %> mg</p>
      <p class="card-text"><strong>Alcohol Consumption:</strong> <%= alcohol %>.   &nbsp;<strong>Amount:</strong> <%= alcoholCount %> oz</p>
      <p class="card-text"><strong>Exercise Frequency:</strong> <%= exercise %>.   &nbsp;<strong>Amount:</strong> <%= exerciseCount %> times</p>
    </div>
  </div>

   <!-- if (tips.length > 0) {  -->
    <div class="card mb-4 transparentbox">
      <div class="card-header">
        Analysis
      </div>
      <div class="card-body">
        <p class="card-text"><strong>Sleep Efficiency:</strong> <%= sleepEfficiency %> / 100 </p>
      </div>
      
    </div>

    <div class="centeredbutton">
      <button type="submit" class="btn btn-primary button1" id="analysis">View More Analysis</button>
    </div>
  </form>
   <!-- }   -->

    <div class="centeredbutton">
      <a href="/main" class="btn btn-primary button2">Go back to Home</a>
    </div>
</div>



<%- include("templates/footer") %>