<%- include('templates/header_goback', { path: '/' }) %>
<div class="m-5">
<div class="alert alert-primary text-center" role="alert">
  <h2>Log In</h2>
</div>
<form action="/loggingin" method="post">
  <div class="form-group mb-2">
    <label for="email">Email Address <span class="required">*</span></label>
    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email">
  </div>
  <div class="form-group mb-4">
    <label for="password">Password <span class="required">*</span></label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
  </div>
  <div class="centeredbutton">
    <button type="submit" class="btn btn-primary button1">Submit</button>
  </div>
  <div class="mt-2 centeredbutton">
    <a href='/forgotpassword'><button type="button" class="btn btn-outline-primary button2">Forgot Password?</button></a>
  </div>
</form>
</div>
<%- include('templates/footer') %>