<%- include('templates/header_goback') %>
<div class="container mb-5 pb-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center mb-0">Hello, <%= name %>!</h1>
        </div>
        <div class="card-body">
          <div class="text-center">
            <h3 class="text-center m-4">Your average sleep score is:</h3>
            <div class="d-flex align-items-center justify-content-center" style="height: 200px;">
              <div class="rounded-circle d-flex align-items-center justify-content-center border border-dark border-3" style="height: 175px; width: 175px; padding: 10px;">
                <span class="display-4 m-2" style="font-size: 3rem;"><%= Math.round(averageSleepScore) %> / 100</span>
            </div>    
            </div>
            <div class="row justify-content-center">
              <form action="/updateGoal" method="POST" class="col-md-4">
                <div class="form-group mt-4">
                  <label for="goal">Set your sleep score goal:</label>
                  <input type="number" id="goal" name="goal" class="form-control my-4" min="0" max="100" value="<%= sleepScoreGoal %>">
                </div>
                <button type="submit" class="btn btn-primary">Update Goal</button>
              </form>
            </div>            
            <p class="mt-4">Your current sleep score goal is: <%= sleepScoreGoal %> / 100</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('templates/footer') %>
