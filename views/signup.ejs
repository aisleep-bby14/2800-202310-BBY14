<%- include('templates/header_goback', { path: '/' }) %>
<div class="m-5 mb-5 pb-5">
  <div class="alert alert-primary text-center" role="alert">
    <h2>Sign Up</h2>
  </div>
  <form action="/submitUser" method="post" onsubmit="disableSubmitButton()">
    <div class="form-group mb-2">
      <label for="name">Name <span class="required">*</span></label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
    </div>
    <div class="form-group mb-2">
      <label for="email">Email Address <span class="required">*</span></label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
    </div>
    <div class="form-group mb-2">
      <label for="password">Password <span class="required">*</span></label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
    </div>
    <div class="form-group mb-2">
      <label for="confirm_password">Confirm Password <span class="required">*</span></label>
      <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required>
    </div>
    <div class="form-group mb-4">
      <label for="birthday">Birthday <span class="required">*</span></label>
      <input type="date" class="form-control" id="birthday" name="birthday" required>
    </div>
    <div class="centeredbutton">
      <button type="submit" id="submitBtn" class="btn btn-primary button1">Submit</button>
    </div>
  </form>
</div>
<%- include('templates/footer') %>

<script>
  function disableSubmitButton() {
    document.getElementById('submitBtn').disabled = true;
  }
</script>
